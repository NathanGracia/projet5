<form class="form-signin" method='POST' action="/connection">

      <h1 class="h3 mb-3 font-weight-normal">Connection</h1>
      <label for="inputEmail" class="sr-only">Email </label>
      <input type="email" id="inputEmail" class="form-control" placeholder="Email address" name="email" requiered>

      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" id="inputPassword" class="form-control" placeholder="mot de passe" name="password" required>
      <div class="form-group" hidden>
          <input name="_csrf" id="csrf" class="form-control" value="{{ form.parts._csrf.generate }}">
      </div>
    
      <button class="btn btn-lg btn-primary btn-block" type="submit">Se connecter</button>

</form>