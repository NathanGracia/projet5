
{% extends "base.html.twig" %}
{% block body %}

  <div class="site-section">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="section-title">
              <span class="caption d-block small" >Utilisateurs</span>
              <h2>Tout les utilisateurs</h2>
            </div>
            {% for user in users %}
              <div class="card" style="margin: 1%">
                <div class="card-body">
                  <h5 class="card-title" > <h2><a href="utilisateur/{{ user.id }}" style="color: #0b0b0b">{{ user.name }}</a></h2></h5>
                  <h6 class="card-subtitle mb-2 text-muted">
                    {% if user.role == 'admin' %}
                      <span class="date-read text-info">Administrateur</span>
                    {% endif %}<br>
                    {% if user.activated == '0' %}
                      <span class="date-read text-warning">Ce compte n'est pas encore activé</span>
                    {% endif %}

                    {% if user.activated == '1' %}
                     <span class="date-read text-success">Compte activé</span>
                    {% endif %}
                  </h6>
                  <p class="card-text">{{ user.email }}</p>
                  <a href="utilisateur/supprimer/{{ user.id }}" class="btn" style="color:red ">Supprimer</a>

                </div>
              </div>

            {% endfor %}
           
          </div>
          
        </div>

     
      </div>
    </div>

    

     {% endblock %} 