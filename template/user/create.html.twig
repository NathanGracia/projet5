
{% extends "base.html.twig" %}
{% block body %}
<form class="form-signin" method='POST' action="/utilisateur/nouveau">
    <div class="d-flex justify-content-center">
        <div class="form-group col-md-3 justify-content-center" style="margin-top: 10%;">
            <h3 class="h3 mb-3 font-weight-normal">Enregistrer un nouvel utilisateur : </h3>
            <label for="inputEmail" class="sr-only" >Email </label>
            <input type="email" id="inputEmail" class="form-control" placeholder="Adresse email de l'utilisateur" name="email" required>

            <div class="form-group" hidden>
                <input name="_csrf" id="csrf" class="form-control" value="{{ form.parts._csrf.generate }}">
            </div>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Envoyer la demande</button>
        </div>
    </div>



</form>
{% endblock %}
