<h1>
    Validez votre compte
</h1>
<form class="form-signin" method='POST' action="/utilisateur/validerCompte/{{ token }}">


    <label for="inputEmail" class="sr-only">Votre nom / pseudo </label>
    <input type="text" id="inputName" class="form-control" placeholder="Nom" name="name" required>

    <label for="inputEmail" class="sr-only">Mot de passe </label>
    <input type="password" id="inputName" class="form-control" placeholder="password" name="password" required>

    <div class="form-group" hidden>
        <input name="_csrf" id="csrf" class="form-control" value="{{ form.parts._csrf.generate }}">
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Finaliser mon compte</button>

</form>
