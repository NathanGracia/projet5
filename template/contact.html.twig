{% extends "base.html.twig" %}
{% block body %}
<div class="site-section">
      <div class="container">
        <div class="row">
          <div class="col-md-12 single-content">
                <div class="pt-5">
                <div class="comment-form-wrap pt-5">
                    <div class="section-title">
                    <h2 class="mb-5">Me contacter</h2>
                    </div>
                    <form action="/contact" method='POST' class="p-5 bg-light">
                
                        <div class="form-group">
                            <label for="name">Votre nom</label>
                            <input name="name" id="name" required class="form-control">
                        </div>
            
                        <div class="form-group">
                            <label for="mail">Votre mail</label>
                            <input name="mail" id="mail" type="mail" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="message">Contenu du message</label>
                            <textarea name="content" id="message" cols="30" rows="10" class="form-control"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Enregistrer l'article" class="btn btn-primary py-3">
                        </div>
    
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

                
                 
{% endblock %}