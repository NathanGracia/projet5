{% extends "base.html.twig" %}
{% block body %}

<div class="site-section">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 single-content">
            
            <p class="mb-5">
              <img src="{{ article.image_url }}" alt="Image" class="img-fluid">
            </p>  
            <h1 class="mb-4">
              {{ article.title }}
            </h1>
            <a href="/article/edit/{{ article.slug }}" ><button type="button" class="btn btn-primary" style="background: grey; border-color: white; margin-bottom: 20px;">Modifier</button> </a> 
            <div class="post-meta d-flex mb-5">
              <div class="bio-pic mr-3">
                <img src="/images/person_1.jpg" alt="Image" class="img-fluidid">
              </div>
              <div class="vcard">
                
                <span class="date-read">Jun 14 <span class="mx-1">&bullet;</span> 3 min read <span class="icon-star2"></span></span>
              </div>
            </div>

        {{ article.content|nl2br }}


            <div class="pt-5">
                    <p>Categories:  <a href="#">Design</a>, <a href="#">Events</a>  Tags: <a href="#">#html</a>, <a href="#">#trends</a></p>

                  </div>
      
      
                  <div class="pt-5">
                    <div class="section-title">
                      <h2 class="mb-5">6 Comments</h2>
                    </div>
                    <ul class="comment-list">
                      {% for comment in comments %}
                        <li class="comment">
                          <div class="vcard bio">
                            <img src="/images/person_1.jpg" alt="Image placeholder">
                          </div>
                          <div class="comment-body">
                            <h3>JC Convenant</h3>
                            <div class="meta">January 9, 2018 at 2:21pm</div>
                            <p>{{ comment.content }}</p>
                          </div>
                        </li>
                      {% endfor %}
                     
                    </ul>
                    <!-- END comment-list -->
                    
                    <div class="comment-form-wrap pt-5">
                      <div class="section-title">
                        <h2 class="mb-5">Leave a comment</h2>
                      </div>
                      <form action="/comment/create" method='POST' class="p-5 bg-light">
                   
                  
      
                        <div class="form-group">
                          <label for="message">Message</label>
                          <textarea name="content" id="message" cols="30" rows="10" class="form-control"></textarea>
                        </div>

                         <input type="text" hidden name ="id_article" class="form-control" id="id_article" value="{{ article.id }}">
                         <input type="text" hidden name ="slug_article" class="form-control" id="slug_article" value="{{ article.slug }}">
                        <div class="form-group">
                          <input type="submit" value="Post Comment" class="btn btn-primary py-3">
                        </div>
      
                      </form>
                    </div>
                  </div>
          </div>





        </div>
        
      </div>
    </div>
     {% endblock %} 