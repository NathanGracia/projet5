
{% extends "base.html.twig" %}
{% block body %}

  <div class="site-section">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="section-title">
              <span class="caption d-block small">Articles</span>
              <h2>Tout les articles</h2>
            </div>
            {% for article in articles %}
            <div class="post-entry-2 d-flex">
              <div class="thumbnail order-md-2" style="background-image: url({{ article.image_url }})"></div>
              <div class="contents order-md-1 pl-0">
                <h2><a href="article/{{ article.slug }}">{{ article.title }}</a></h2>
                <p class="mb-3">{{ article.content|slice(0,250) }}...</p>
                <div class="post-meta">
                  <span class="date-read">{{ article.date }}</span>

                  {% if isAdmin(user()) %}
                  <form action="/article/delete/{{ article.id }}" method="POST" >
                    <button type="submit" class="btn btn-link text-danger " onClick="return confirm('Voulez vous supprimer cet article ?')" style="font-size: 12px; padding: 0px"><span >Supprimer</span></button>
                  </form>
                  {% endif %}
                </div>
              </div>
            </div>
            {% endfor %}
           
          </div>
          
        </div>

     
      </div>
    </div>

    

     {% endblock %} 